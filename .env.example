# App
PUBLIC_APP_URL=http://localhost:5173
PUBLIC_APP_NAME=CodeReview.live

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/codereview

# Authentication - Better-Auth
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:5173 # Base URL of your app

# OAuth Providers
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Email Configuration (Choose one)
EMAIL_PROVIDER=nodemailer  # or 'resend'

# Nodemailer (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@codereview.live

# Resend
RESEND_API_KEY=re_123456789

# File Storage Configuration (Choose one or multiple)
STORAGE_PROVIDER=local  # 'local', 'r2', 's3', or 'hybrid'

# Local Storage
